config BCM2835
	bool "Broadcom BCM2835 SoC support"
	depends on ARCH_BCM283X

config BCM2836
	bool "Broadcom BCM2836 SoC support"
	depends on ARCH_BCM283X

menu "Broadcom BCM283X family"
	depends on ARCH_BCM283X

choice
	prompt "Broadcom BCM283X board select"
	optional

config TARGET_RPI
	bool "Raspberry Pi"
	select BCM2835
	select CPU_ARM1176

config TARGET_RPI_2
	bool "Raspberry Pi 2"
	select ARMV7_LPAE
	select BCM2836
	select CPU_V7

endchoice

config SYS_BOARD
	default "rpi" if TARGET_RPI
	default "rpi_2" if TARGET_RPI_2

config SYS_VENDOR
	default "raspberrypi"

config SYS_SOC
	default "bcm283x"

config SYS_CONFIG_NAME
	default "rpi" if TARGET_RPI
	default "rpi_2" if TARGET_RPI_2

endmenu
