	default "gdsys"

config SYS_CONFIG_NAME
	default "strider"

config GDSYS_LEGACY_OSD_CMDS
	default y

config GDSYS_LEGACY_DRIVERS
	default y

endif

config CMD_IOLOOP
	bool "Enable 'ioloop' and 'ioreflect' commands"
	help
	  These commands provide FPGA tests.
